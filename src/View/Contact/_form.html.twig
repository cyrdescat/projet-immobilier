<form method="post" >
    <input type="hidden" value="{{ contact.id }}" name="id">
    <div>
        <label  for="lastname">Nom :</label>
        <input type="text" value="{{ contact.lastname }}" name="lastname" required>
    </div>
    <div>
        <label  for="firstName">Prénom :</label>
        <input type="text" value="{{ contact.fisrtName }}" name="firstName" required>
    </div>
    <div>
        <label  for="mail">Email :</label>
        <input type="mail" value="{{ contact.mail }}" name="mail" required>
    </div>
    <div>
        <label  for="phone">Téléphone :</label>
        <input type="tel" value="{{ contact.phone }}" name="phone" required>
    </div>
    <div>
        <label  for="subject">Sujet :</label>
        <input type="text" value="{{ contact.subject }}" name="subject" required>
    </div>
    <div>
        <label  for="message">Message :</label>
        <textarea value="{{ contact.message }}" name="message" required></textarea>
    </div>    
    <input type="submit" value="Valider">
</form>
